<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="{{ .Values.restserver.loglevel | upper }}">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout>
                <pattern>
                    {"type":"log","level":"%p","time":"%d{yyyy-MM-dd'T'HH:mm:ss.SSS'Z'}{ {{- include "cpro.timeZoneEnvNameWithoutQuote" . }}}","log":{"message":"%m"}}%n
                </pattern>
            </PatternLayout>
        </Console>
    </Appenders>
    <Loggers>
        <Root level="{{ .Values.restserver.loglevel | upper }}">
            <AppenderRef ref="Console" />
        </Root>
    </Loggers>
</Configuration>

{
    "version": 4,
    "index_patterns" : ["syslog-*"],
    "settings": {
      "index": {
        "number_of_shards": 1,
        "number_of_replicas": "--NUMBER_OF_REPLICAS--",
        "allocation": {
          "max_retries": 15
        }
      }
    },
    "mappings" : {
      "properties": {
        "host" : {
          "type" : "keyword",
          "index": true
        },
        "ident" : {
          "type" : "keyword",
          "index": true
        },
        "facility_severity" : {
          "type" : "keyword",
          "index": true
        },
        "msgid" : {
          "type" : "keyword",
          "index": true
        },
        "pid" : {
          "type" : "keyword",
          "index": true
        },
        "message" : {
          "type" : "keyword",
          "index": true
        },
        "time" : {
          "type" : "date",
          "format" : "yyyy MMM dd HH:mm:ss||strict_date_optional_time",
          "index": true
        }
      }
    }
}
